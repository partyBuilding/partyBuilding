<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bdqn.dao.mapper.CommentMapper">
    <delete id="delComment" >
        delete from comment where id=#{id}
    </delete>

    <select id="getCommentConditionPageAll" resultType="cn.bdqn.beans.bean.Comment">
        select * from `comment` as cm
        <if test="title!=null">
            where cm.documentId=(select id from document where title like CONCAT('%',#{title},'%') LIMIT 1)
        </if>
    </select>
</mapper>