<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bdqn.dao.mapper.OptionsMapper">
    <insert id="addOption" >
        insert into options value(null,#{subjectId},#{concent},#{result},#{assist})
    </insert>

    <update id="updateOption" >
        update options
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
            <if test="subjectId!=0">
                subjectId=#{subjectId},
            </if>
            <if test="concent!=null and concent!=''">
                concent=#{concent},
            </if>
            <if test="result!=0">
                result=#{result},
            </if>
            <if test="assist!=0">
                assist=#{assist},
            </if>
        </trim>
    </update>
</mapper>